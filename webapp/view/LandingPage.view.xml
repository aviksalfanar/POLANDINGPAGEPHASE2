<mvc:View controllerName="com.alfanar.polandingpage.polandingpage.controller.LandingPage" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns="sap.m" height="100%">
    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1" class="bgcolor">
                <f:heading>
                    <FlexBox direction="Row" justifyContent="SpaceAround" wrap="Wrap" class="border">
                        <layout:HorizontalLayout class="sapUiMediumMarginEnd">
                            <Label text="{i18n>PONumber}:" design="Bold" class="sapUiTinyMarginEnd" />
                            <Text text="{appModel>/PoNum}" />
                        </layout:HorizontalLayout>

                        <layout:HorizontalLayout class="sapUiMediumMarginEnd">
                            <Label text="{i18n>Plant}:" design="Bold" class="sapUiTinyMarginEnd" />
                            <Text text="{appModel>/Plant}" />
                        </layout:HorizontalLayout>

                        <layout:HorizontalLayout class="sapUiMediumMarginEnd">
                            <Label text="{i18n>CreatedBy}:" design="Bold" class="sapUiTinyMarginEnd" />
                            <Text text="Tobe Fixed" />
                        </layout:HorizontalLayout>

                        <layout:HorizontalLayout class="sapUiMediumMarginEnd">
                            <Label text="{i18n>CreationDate}:" design="Bold" class="sapUiTinyMarginEnd" />
                            <Text text="Tobe Fixed" />
                        </layout:HorizontalLayout>
                    </FlexBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
                <FlexBox direction="Row" justifyContent="Start" wrap="Wrap">
                    <GenericTag text="{i18n>POValue}" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginEnd">
                        <ObjectNumber state="Warning" number="{appModel>/PoValue}" />
                    </GenericTag>
                    <GenericTag text="{i18n>POType}" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginEnd">
                        <ObjectNumber state="Warning" number="{appModel>/PoType}" />
                    </GenericTag>
                    <GenericTag text="{i18n>INCOTerm}" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginEnd">
                        <ObjectNumber state="Warning" number="{appModel>/IncoTerm}" />
                    </GenericTag>
                    <GenericTag text="{i18n>PurchasingGroup}" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginEnd">
                        <ObjectNumber state="Warning" number="{appModel>/PurGroup}" />
                    </GenericTag>
                    <GenericTag text="{i18n>POSaving}" design="StatusIconHidden" status="Warning" class="sapUiSmallMarginEnd">
                        <ObjectNumber state="Warning" number="{appModel>/PoSaving}" />
                    </GenericTag>
                </FlexBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <layout:Splitter id="idSplitterLayoutMain" height="200vh" orientation="Vertical">
                <!-- Splitter 1 Vendor History and Milestone Data-->
                <layout:Splitter id="_IDGenSplitter1">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData1" size="30%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel id="_IDGenPanel1" width="auto" accessibleRole="Region">
                            <content>
                                <layout:HorizontalLayout class="sapUiTinyMarginBegin sapUiSmallMarginBottom sapUiSmallMarginTop subheaderborder">
                                    <Label text="{i18n>PaymentTermAndMethod}: {appModel>/PmtTermAdvance}" class="sapUiSmallMarginEnd borderRight" />
                                    <Label text="{appModel>/PmtTermDelivery}" class="sapUiTinyMarginEnd borderRight" />
                                    <Label text="{appModel>/PmtTermRetention}" class="sapUiTinyMarginEnd padding" />
                                </layout:HorizontalLayout>
                                <Panel expandable="true" headerText="{i18n>AdvPM}" expanded="true">
                                    <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.AdvPayMilestones" type="XML" />
                                </Panel>
                                <Panel expandable="true" headerText="{i18n>DeliveryPM}">
                                    <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.AgainstDelvPaymMileStones" type="XML" />
                                </Panel>
                                <Panel expandable="true" headerText="{i18n>RetentionPM}">
                                    <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.AgRetentioPayMiles" type="XML" />
                                </Panel>
                            </content>
                        </Panel>

                        <Panel id="_IDGenPanel2" width="auto" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar2">
                                    <Title id="_IDGenTitle3" text="{i18n>VendorAnalysisCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.VendorAnalysis" type="XML" />
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

                <!-- Splitter 2 PO Analysis -->
                <layout:Splitter id="_IDGenSplitter2">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData2" size="18%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel id="_IDGenPanelPOANalysis" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar">
                                    <Title text="{i18n>POAnalysisCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POAnalysisMicroChart" type="XML" />
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

                <!-- Splitter 3 PO Item and PO Item History -->
                <layout:Splitter id="_IDGenSplitter3">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData4" size="18%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title text="{i18n>POItemsCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POItems" type="XML" />
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

                <!-- Splitter 4 Approval Decision -->
                <layout:Splitter>
                    <layout:layoutData>
                        <layout:SplitterLayoutData size="26%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title text="{i18n>ApprovalDecision}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.Approval" type="XML" />
                            </content>
                            <layoutData>
                                <layout:SplitterLayoutData size="65%" />
                            </layoutData>
                        </Panel>

                        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar>
                                    <Title text="{i18n>ApproverDecision}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.ApproverDecision" type="XML" />
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>
            </layout:Splitter>
        </f:content>
    </f:DynamicPage>
</mvc:View>

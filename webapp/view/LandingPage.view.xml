<mvc:View controllerName="com.alfanar.polandingpage.polandingpage.controller.LandingPage" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns="sap.m" height="100%">
    <f:DynamicPage id="dynamicPageId" headerExpanded="{/headerExpanded}" toggleHeaderOnTitleClick="{/titleClickable}">
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title id="_IDGenTitle1" text="PO Landing Page" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <!-- DynamicPage Header -->
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1" pinnable="true">
                <layout:HorizontalLayout id="_IDGenHorizontalLayout1" allowWrapping="true">
                    <layout:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiMediumMarginEnd">
                        <ObjectAttribute id="_IDGenObjectAttribute1" title="{i18n>PONumber}" text="{appModel>/PoNum}" />
                        <ObjectAttribute id="_IDGenObjectAttribute2" title="{i18n>Plant}" text="{appModel>/Plant}" />
                        <ObjectAttribute id="_IDGenObjectAttribute3" title="{i18n>CreatedBy}" text="Tobe Fixed" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout id="_IDGenVerticalLayout2" class="sapUiMediumMarginEnd">
                        <ObjectAttribute id="_IDGenObjectAttribute4" title="{i18n>CreationDate}" text="To be fixed" />
                        <ObjectAttribute id="_IDGenObjectAttribute5" title="{i18n>POValue}" text="{appModel>/PoValue}" />
                        <ObjectAttribute id="_IDGenObjectAttribute6" title="{i18n>POType}" text="{appModel>/PoType}" />
                    </layout:VerticalLayout>

                    <layout:VerticalLayout id="_IDGenVerticalLayout3" class="sapUiMediumMarginEnd">
                        <ObjectAttribute id="_IDGenObjectAttribute8" title="{i18n>INCOTerm}" text="{appModel>/IncoTerm}" />
                        <ObjectAttribute id="_IDGenObjectAttribute7" title="{i18n>PurchasingGroup}" text="{appModel>/PurGroup}" />
                        <ObjectAttribute id="_IDGenObjectAttribute9" title="{i18n>POSaving}" text="{appModel>/PoSaving}" />
                    </layout:VerticalLayout>
                    <layout:VerticalLayout id="_IDGenVerticalLayout4" class="sapUiMediumMarginEnd">
                        <ObjectAttribute id="_IDGenObjectAttribute10" title="{i18n>PaymentTermAndMethod}" text="{appModel>/PmtTerm}" />
                    </layout:VerticalLayout>
                </layout:HorizontalLayout>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <layout:Splitter id="idSplitterLayoutMain" height="150vh" orientation="Vertical">
                <!-- Splitter 1 Vendor History and Milestone Data-->
                <layout:Splitter id="_IDGenSplitter1">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData1" size="30%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel id="_IDGenPanel1" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar1">
                                    <Title id="_IDGenTitle2" text="{i18n>MilestonesDataCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.AdvPayMilestones" type="XML"/>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.AgainstDelvPaymMileStones" type="XML"/>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.AgRetentioPayMiles" type="XML"/>
                            </content>
                        </Panel>

                        <Panel id="_IDGenPanel2" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar2">
                                    <Title id="_IDGenTitle3" text="{i18n>VendorAnalysisCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.VendorAnalysis" type="XML"/>
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

                <!-- Splitter 2 PO Analysis -->
                <layout:Splitter id="_IDGenSplitter2">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData2" size="25%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel id="_IDGenPanelPOANalysis" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar">
                                    <Title text="{i18n>POAnalysisCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POAnalysisMicroChart" type="XML"/>
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

                <!-- Splitter 3 PO Item and PO Item History -->
                <layout:Splitter id="_IDGenSplitter3">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData4" size="30%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar >
                                    <Title  text="{i18n>POItemsCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POItems" type="XML"/>
                            </content>
                        </Panel>

                        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar >
                                    <Title  text="{i18n>POItemsHistCap}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                                <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POItemHistory" type="XML"/>
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

                <!-- Splitter 4 Approval Decision -->            
                <layout:Splitter id="_IDGenSplitter4">
                    <layout:layoutData>
                        <layout:SplitterLayoutData id="_IDGenSplitterLayoutData10" size="22%" />
                    </layout:layoutData>
                    <layout:contentAreas>
                        <Panel id="_IDGenPanelPOANalysis4" width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                            <headerToolbar>
                                <OverflowToolbar id="_IDGenOverflowToolbar4">
                                    <Title text="{i18n>ApprovalDecision}" />
                                </OverflowToolbar>
                            </headerToolbar>
                            <content>
                            </content>
                        </Panel>
                    </layout:contentAreas>
                </layout:Splitter>

            </layout:Splitter>
        </f:content>
    </f:DynamicPage>
</mvc:View>

<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:f="sap.f" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.data="sap.viz.ui5.data" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <Dialog id="idMatPriceVsOldPriceDialog" title="{i18n>MaterialPriceNotMatchingTitle}" class="sapUiSizeCompact" contentHeight="70%" contentWidth="40%" resizable="true" draggable="true">
        <content>
            <VBox>
                <Label text="{i18n>SelectMaterialText}" class="sapUiTinyMarginTopBottom sapUiLargeMarginBegin" design="Bold" />
                <HBox>
                    <ComboBox change="onMatNumberSelect" id="idCombo" class="sapUiLargeMarginBegin sapUiLargeMarginBottom sapUiLargeMarginEnd" showSecondaryValues="true" items="{ path: 'appModel>/MatchMaterials', sorter: { path: 'MatNum' } }">
                        <core:ListItem key="{appModel>MatNum}" text="{appModel>MatNum}" additionalText="{appModel>MatDesc}" />
                    </ComboBox>
                    <Label class="sapUiLargeMarginBegin sapUiTinyMarginTop sapUiLargeMarginEnd" text="SAR" design="Bold" />
                </HBox>
                <layout:FixFlex id='idMatPriceVsOldPriceFixFlex' minFlexSize="250">
                    <layout:flexContent>
                        <viz:VizFrame id="idMatPriceVsOldPriceChart" uiConfig="{applicationSet:'fiori'}" vizType='line'>
                            <viz:dataset>
                                <viz.data:FlattenedDataset data="{appModel>/MatPriceVendorChart}">
                                    <viz.data:dimensions>
                                        <viz.data:DimensionDefinition name="Date" value="{appModel>Date}" />
                                    </viz.data:dimensions>
                                    <viz.data:measures>
                                        <viz.data:MeasureDefinition name="Price" value="{appModel>Price}" />
                                        <viz.data:MeasureDefinition name="Price" value="{appModel>Price}" />
                                    </viz.data:measures>
                                </viz.data:FlattenedDataset>
                            </viz:dataset>

                            <viz:feeds>
                                <viz.feeds:FeedItem id='valueAxisFeedLineMPOP' uid="valueAxis" type="Measure" values="Price" />
                                <viz.feeds:FeedItem id='categoryAxisFeedLineMPOP' uid="categoryAxis" type="Dimension" values="Date" />
                            </viz:feeds>
                        </viz:VizFrame>
                    </layout:flexContent>
                </layout:FixFlex>
            </VBox>
        </content>
        <buttons>
            <Button press="onMaterialPriceVendorDialogClose" text="Close" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>

<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:plugins="sap.m.plugins">
    <Table id="idPoItemsTable" autoPopinMode="true" contextualWidth="Auto" mode="SingleSelectMaster" alternateRowColors="true" items="{path: 'appModel>/PoDataItems', sorter: { path: 'Item' }}" itemPress="onPOItemSelect" class="sapUiMediumMarginBottom">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>POItems}" level="H2" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <dependents>
            <plugins:ColumnResizer />
        </dependents>
        <columns>
            <Column width="7em" minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>ItemNo}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Material}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>MaterialDescription}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>MaterialPrice}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Currency}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>OrderQuantity}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Unit}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>More}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation">
                <cells>
                    <Text text="{appModel>Item}" />
                    <Text text="{appModel>MatNum}" />
                    <Text text="{appModel>MatDesc}" />
                    <Text text="{appModel>MatPrice}" />
                    <Text text="{appModel>Currency}" />
                    <Text text="{appModel>OrdQty}" />
                    <Text text="{appModel>Unit}" />
                    <Link text="More" press="onPOItemTableMore" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>

<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:f="sap.f" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.data="sap.viz.ui5.data" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds">
    <layout:HorizontalLayout id="idVendorDetailsHL" allowWrapping="true">
        <layout:VerticalLayout id="idVendorNameVL" class="sapUiMediumMarginEnd">
            <Label id="idVendorNameLabel" text="{i18n>VendorName}:" />
            <Text text="{appModel>/VndCode}-{appModel>/VndName}" />
        </layout:VerticalLayout>
        <layout:VerticalLayout class="sapUiMediumMarginEnd">
            <Label text="{i18n>VendorCountry}:" />
            <Text text="{appModel>/VndCntr}" />
        </layout:VerticalLayout>
        <layout:VerticalLayout class="sapUiMediumMarginEnd">
            <Label text="{i18n>DMSVendorQuotationsComparison}:" />
            <Text text="To be fixed" />
        </layout:VerticalLayout>
    </layout:HorizontalLayout>

    <FlexBox direction="Column" alignContent="SpaceBetween" class="sapUiSmallMarginTop">
        <!-- Three Years Vendor Analysis Chart Section -->
        <FlexBox direction="Row" justifyContent="SpaceAround">
            <layout:FixFlex id='idThreeBoArea' minFlexSize="250">
                <layout:flexContent>
                    <viz:VizFrame id="idThreeBoAreaViz" vizProperties="{title: {text : 'Order Value vs Month', visible : true}}" uiConfig="{applicationSet:'fiori'}" width="20em" height="20em" vizType='area'>
                        <viz:dataset>
                            <viz.data:FlattenedDataset data="{appModel>/BoLineAreaMap}">
                                <viz.data:dimensions>
                                    <viz.data:DimensionDefinition name="Month" value="{appModel>Month}" />
                                </viz.data:dimensions>
                                <viz.data:measures>
                                    <viz.data:MeasureDefinition name="OrderValue" value="{appModel>OrderValue}" />
                                    <viz.data:MeasureDefinition name="OrderValue" value="{appModel>OrderValue}" />
                                </viz.data:measures>
                            </viz.data:FlattenedDataset>
                        </viz:dataset>

                        <viz:feeds>
                            <viz.feeds:FeedItem id='valueAxisFeedArea' uid="valueAxis" type="Measure" values="OrderValue" />
                            <viz.feeds:FeedItem id='categoryAxisFeedArea' uid="categoryAxis" type="Dimension" values="Month" />
                        </viz:feeds>
                    </viz:VizFrame>
                </layout:flexContent>
            </layout:FixFlex>
            <layout:FixFlex id='idThreeBoBar' minFlexSize="250">
                <layout:flexContent>
                    <viz:VizFrame id="idThreeBoBarViz" vizProperties="{title: {text : 'Order Value vs Year', visible : true}}" uiConfig="{applicationSet:'fiori'}" width="20em" height="20em" vizType='column'>
                        <viz:dataset>
                            <viz.data:FlattenedDataset data="{appModel>/BoBarMap}">
                                <viz.data:dimensions>
                                    <viz.data:DimensionDefinition name="Year" value="{appModel>Year}" />
                                </viz.data:dimensions>
                                <viz.data:measures>
                                    <viz.data:MeasureDefinition name="OrderValue" value="{appModel>OrderValue}" />
                                    <viz.data:MeasureDefinition name="OrderValue" value="{appModel>OrderValue}" />
                                </viz.data:measures>
                            </viz.data:FlattenedDataset>
                        </viz:dataset>

                        <viz:feeds>
                            <viz.feeds:FeedItem id='valueAxisFeedBar' uid="valueAxis" type="Measure" values="OrderValue" />
                            <viz.feeds:FeedItem id='categoryAxisFeedBar' uid="categoryAxis" type="Dimension" values="Year" />
                        </viz:feeds>
                    </viz:VizFrame>
                </layout:flexContent>
            </layout:FixFlex>
        </FlexBox>
        <!-- Vendor Evaluation Chart Section -->
        <FlexBox direction="Row" justifyContent="SpaceAround">
            <layout:FixFlex id='idVendorBoLine' minFlexSize="250">
                <layout:flexContent>
                    <viz:VizFrame id="idThreeBoLineViz" vizProperties="{title: {text : 'Order Value vs Year', visible : true}}" uiConfig="{applicationSet:'fiori'}" width="20em" height="20em" vizType='line'>
                        <viz:dataset>
                            <viz.data:FlattenedDataset data="{appModel>/BoLineMap}">
                                <viz.data:dimensions>
                                    <viz.data:DimensionDefinition name="Year" value="{appModel>Year}" />
                                </viz.data:dimensions>
                                <viz.data:measures>
                                    <viz.data:MeasureDefinition name="OrderValue" value="{appModel>OrderValue}" />
                                    <viz.data:MeasureDefinition name="OrderValue" value="{appModel>OrderValue}" />
                                </viz.data:measures>
                            </viz.data:FlattenedDataset>
                        </viz:dataset>

                        <viz:feeds>
                            <viz.feeds:FeedItem id='valueAxisFeedLine' uid="valueAxis" type="Measure" values="OrderValue" />
                            <viz.feeds:FeedItem id='categoryAxisFeedLine' uid="categoryAxis" type="Dimension" values="Year" />
                        </viz:feeds>
                    </viz:VizFrame>
                </layout:flexContent>
            </layout:FixFlex>
            <FlexBox direction="Row" justifyContent="Center">
                <Table autoPopinMode="true" contextualWidth="Auto" class="sapUiTinyMargin">
                    <columns>
                        <Column>
                            <Text text="Dimension" />
                        </Column>
                        <Column>
                            <Text text="%" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="Quality" />
                                <Text text="{appModel>/BOQUALITY}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <Text text="Price" />
                                <Text text="{appModel>/BOPRICE}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <Text text="Delivery" />
                                <Text text="{appModel>/BODELIVERY}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <Text text="Grade" />
                                <Text text="{appModel>/BOGRADE}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Table autoPopinMode="true" contextualWidth="Auto" class="sapUiTinyMargin">
                    <columns>
                        <Column>
                            <Text text="#" />
                        </Column>
                        <Column>
                            <Text text="Values" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="Purchase Order" />
                                <Text text="{appModel>/BOPURCHASEORDER}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <Text text="Plants" />
                                <Text text="{appModel>/BOPLANT}" />
                            </cells>
                        </ColumnListItem>
                        <ColumnListItem>
                            <cells>
                                <Text text="Supplied Materials" />
                                <Text text="{appModel>/BOSUPLLIEDMATERIALS}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </FlexBox>
        </FlexBox>
    </FlexBox>
</core:FragmentDefinition>

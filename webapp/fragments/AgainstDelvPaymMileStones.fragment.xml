<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Table id="idDPM" autoPopinMode="true" contextualWidth="Auto" mode="None" items="{appModel>/DeliverPM}" class="sapUiMediumMarginBottom">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>DeliveryPM}" level="H2" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="3em" minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Percentage}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="5em">
                <Text text="{i18n>Baseline}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="8em">
                <Text text="{i18n>Date}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="10em">
                <Text text="{i18n>PaymentMethod}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="4em">
                <Text text="{i18n>More}" />
            </Column>
        </columns>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{appModel>Perc}" />
                    <Text text="{appModel>BsdtRef}" />
                    <Text text="{path: 'appModel>Bsdt', formatter: '.formatter.getDateFormatted'}" />
                    <Text text="{appModel>Pmthd}" />
                    <Link text="More" press="onDeliveryPayMilestoneTableMore"></Link>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>

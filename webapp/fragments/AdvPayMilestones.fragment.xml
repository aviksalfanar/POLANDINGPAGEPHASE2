<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Table id="idAvPM" autoPopinMode="true" contextualWidth="Auto" mode="None" alternateRowColors="true" items="{appModel>/AdvnPM}" class="sapUiMediumMarginBottom">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>AdvPM}" level="H2"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="3em" minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Percentage}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Baseline}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="8em">
                <Text text="{i18n>Date}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="6em">
                <Text text="{i18n>PaymentMethod}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="4em">
                <Text text="{i18n>More}"></Text>
            </Column>
        </columns>
        <items>
            <ColumnListItem >
                <cells>
                    <Text text="{appModel>Perc}"></Text>
                    <Text text="{appModel>BsdtRef}"></Text>
                    <Text text="{path: 'appModel>Bsdt', formatter: '.formatter.getDateFormatted'}"></Text>
                    <Text text="{appModel>Pmthd}"></Text>
                    <Link text="More" press="onAdvPayMilestoneTableMore"></Link>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
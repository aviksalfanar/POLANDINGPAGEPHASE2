<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns="sap.m">
    <Dialog resizable="true" draggable="true" title="{i18n>POItemsCap} (Item: {appModel>/SelectedPoItem/Item} Material: {appModel>/SelectedPoItem/MatNum})" class="sapUiSizeCompact" contentHeight="70%" contentWidth="90%">
        <content>
            <layout:Splitter>
                <layout:layoutData>
                    <layout:SplitterLayoutData size="auto" resizable="false" />
                </layout:layoutData>
                <layout:contentAreas>
                    <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                        <content>
                            <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POItemHistory" type="XML" />
                        </content>
                        <layoutData>
                            <layout:SplitterLayoutData size="65%" />
                        </layoutData>
                    </Panel>

                    <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
                        <content>
                            <core:Fragment fragmentName="com.alfanar.polandingpage.polandingpage.fragments.POItemHistoryChart" type="XML" />
                        </content>
                    </Panel>
                </layout:contentAreas>
            </layout:Splitter>
        </content>
        <buttons>
            <Button press="onDialogClose" text="Close" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>

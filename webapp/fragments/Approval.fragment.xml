<core:FragmentDefinition height="100%" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:plugins="sap.m.plugins">
    <Table id="idApprovalDecision" sticky="HeaderToolbar,InfoToolbar,ColumnHeaders" autoPopinMode="true" contextualWidth="Auto" mode="None" alternateRowColors="true" items="{appModel>/ApprovalLevels}" class="sapUiMediumMarginBottom">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>ApproverDecision}" level="H2" />
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <layoutData>
            <layout:SplitterLayoutData size="65%" />
        </layoutData>
        <columns>
            <Column minScreenWidth="Phone" demandPopin="false" width="5em">
                <Text text="{i18n>Level}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Name}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>EmployeePosition}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="8em">
                <Text text="{i18n>ActionDate}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false" width="8em">
                <Text text="{i18n>Status}" />
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Comments}" />
            </Column>
        </columns>
        <dependents>
            <plugins:ColumnResizer />
        </dependents>
        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{appModel>ApLevel}" />
                    <Text text="{appModel>EmpName}" />
                    <Text text="{appModel>EmpPostn}" />
                    <Text text="{path: 'appModel>ActDate', formatter: '.formatter.getDateFormatted'}" />
                    <Text text="{appModel>Status}" />
                    <Link text="{i18n>Comments}" press="onApprovalTableMoreClick" />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>

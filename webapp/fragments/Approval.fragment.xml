<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Table id="idApprovalDecision" autoPopinMode="true" contextualWidth="Auto" mode="None" alternateRowColors="true" items="{appModel>/ApprovalLevels}" class="sapUiMediumMarginBottom">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>ApprovalLevelsCap}" level="H2"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="7em" minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>ApprovalLevel}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>EmployeeName}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>EmployeePosition}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>ActionDate}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Status}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Comments}"></Text>
            </Column>
        </columns>
        <items>
            <ColumnListItem >
                <cells>
                    <Text text="{appModel>ApLevel}"></Text>
                    <Text text="{appModel>EmpName}"></Text>
                    <Text text="{appModel>EmpPostn}"></Text>
                    <Text text="{path: 'appModel>ActDate', formatter: '.formatter.getDateFormatted'}"></Text>
                    <Text text="{appModel>Status}"></Text>
                    <Text text="{appModel>Comments}"></Text>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
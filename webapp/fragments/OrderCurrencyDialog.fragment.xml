<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
	<Dialog resizable="true" draggable="true" title="Order Currency" class="sapUiSizeCompact" contentHeight="40%" contentWidth="40%">
		<content>
			<Table id="idCurrencytable" items="{appModel>/Currency}">
				<columns>
					<Column >
						<Text text="{i18n>Item}"/>
					</Column>
					<Column >
						<Text text="{i18n>Description}"/>
					</Column>
					<Column >
						<Text text="{i18n>CurrentCurrency}"/>
					</Column>
					<Column >
						<Text text="{i18n>LastCurrency}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<ObjectIdentifier text="{appModel>MatNum}"/>
							<ObjectIdentifier text="{appModel>MatDesc}"/>
							<ObjectIdentifier text="{appModel>CurrentCurrency}"/>
							<ObjectIdentifier text="{appModel>LastCurrency}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<buttons>
			<Button press="onCurrencyDialogClose" text="Close"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
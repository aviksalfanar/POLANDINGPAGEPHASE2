<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m">
    <Table id="idPoItemsHistTable" autoPopinMode="true" contextualWidth="Auto" mode="SingleSelectMaster" alternateRowColors="true" items="{appModel>/ItemHistorySet}" class="sapUiMediumMarginBottom">
        <headerToolbar>
            <OverflowToolbar>
                <content>
                    <Title text="{i18n>POItemsHist}" level="H2"/>
                </content>
            </OverflowToolbar>
        </headerToolbar>
        <columns>
            <Column width="7em" minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>OrderPo}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>CreationDate}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>MaterialPrice}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>Currency}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>OrderQuantity}"></Text>
            </Column>
            <Column minScreenWidth="Phone" demandPopin="false">
                <Text text="{i18n>VendorName}"></Text>
            </Column>
        </columns>
        <items>
            <ColumnListItem >
                <cells>
                    <Text text="{appModel>PoNum}"></Text>
                    <Text text="{path: 'appModel>CreDate', formatter: '.formatter.getDateFormatted'}"></Text>
                    <Text text="{appModel>MatPrice}"></Text>
                    <Text text="{appModel>Currency}"></Text>
                    <Text text="{appModel>OrdQty}"></Text>
                    <Text text="{appModel>VndName}"></Text>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</core:FragmentDefinition>
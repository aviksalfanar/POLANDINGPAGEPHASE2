<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:plugins="sap.m.plugins">
    <Dialog resizable="true" draggable="true" title="{i18n>RetentionPM}" class="sapUiSizeCompact" contentHeight="30%" contentWidth="90%">
        <content>
            <Table autoPopinMode="true" contextualWidth="Auto" mode="SingleSelectMaster" alternateRowColors="true" items="{appModel>/POItemHistoryMore}" class="sapUiMediumMarginBottom">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{i18n>POItemsHist}" level="H2" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <dependents>
                    <plugins:ColumnResizer />
                </dependents>
                <columns>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>MaterialPrice}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>Currency}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>OrderQuantity}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{appModel>MatPrice}" />
                            <Text text="{appModel>Currency}" />
                            <Text text="{appModel>OrdQty}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button press="onDialogClose" text="Close" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>

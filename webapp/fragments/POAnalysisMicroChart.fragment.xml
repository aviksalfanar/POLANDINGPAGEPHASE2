<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mc="sap.suite.ui.microchart" xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:card="sap.f.cards">
    <FlexBox justifyContent="SpaceAround" wrap="Wrap">
        <!-- Material Price Vs Old Price Card -->
        <f:Card width="90%" height="100%">
            <f:header>
                <card:Header title="{i18n>MatPriceVsOldPrice}" />
            </f:header>
            <f:content>
                <FlexBox direction="Column" alignItems="Start">
                    <mc:RadialMicroChart
                        size="M"
                        percentage="{path: 'appModel>/MatPriceVsOldPrice/Percentage', formatter: '.formatter.getPercentageForMicroChart'}"
                        alignContent="Center"
                        valueColor="{path: 'appModel>/MatPriceVsOldPrice/Percentage', formatter: '.formatter.getMicroChartValueColor'}"
                    />
                    <FlexBox direction="Row" width="100%" justifyContent="SpaceBetween" class="sapUiContentPadding">
                        <FlexBox direction="Column" alignItems="Center">
                            <Text text="Match" />
                            <Text text="{appModel>/MatPriceVsOldPrice/YMatch}" />
                        </FlexBox>
                        <FlexBox direction="Column" alignItems="Center">
                            <Link text="Non-Match" emphasized="true" textAlign="End" />
                            <Text text="{appModel>/MatPriceVsOldPrice/NMatch}" />
                        </FlexBox>
                    </FlexBox>
                </FlexBox>
            </f:content>
        </f:Card>


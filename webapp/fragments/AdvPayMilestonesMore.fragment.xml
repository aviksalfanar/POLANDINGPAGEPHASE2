<core:FragmentDefinition height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:plugins="sap.m.plugins">
    <Dialog resizable="true" draggable="true" title="{i18n>AdvPM}" class="sapUiSizeCompact" contentHeight="30%" contentWidth="90%">
        <content>
            <Table autoPopinMode="true" contextualWidth="Auto" mode="None" alternateRowColors="true" items="{appModel>/AdvnPMMore}" class="sapUiMediumMarginBottom">
                <dependents>
                    <plugins:ColumnResizer />
                </dependents>
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <Title text="{i18n>MoreDetails}" level="H2" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>PONumber}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>CDoc}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>Gurantee}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>Type}" />
                    </Column>
                    <Column minScreenWidth="Phone" demandPopin="false">
                        <Text text="{i18n>SeqNo}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{appModel>PoNum}" />
                            <Text text="{appModel>Cdoc}" />
                            <Text text="{appModel>Grnt}" />
                            <Text text="{appModel>Mtyp}" />
                            <Text text="{appModel>SeqNo}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <buttons>
            <Button press="onDialogClose" text="Close" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
